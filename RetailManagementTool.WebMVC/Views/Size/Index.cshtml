@model IEnumerable<RetailManagementTool.Models.Size.SizeListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Sizes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SizeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SizeName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SizeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SizeName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SizeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.SizeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SizeId })
        </td>
    </tr>
}

</table>
