@model IEnumerable<RetailManagementTool.Models.Department.DepartmentListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Departments</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentPromoDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentPromoDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.DepartmentId }) |
            @Html.ActionLink("Details", "Details", new { id = item.DepartmentId }) |
            @Html.ActionLink("See Related Products", "ListByDepartmentNumber", "Product", new { id = item.DepartmentId }, htmlAttributes: new { @class = "btn" }) |
            @Html.ActionLink("Edit Promo Products", "EditProductsByDepartment", "Product", new { id = item.DepartmentId }, htmlAttributes: new { @class = "btn" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.DepartmentId })
        </td>
    </tr>
}

</table>
