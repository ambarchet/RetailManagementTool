@model IEnumerable<RetailManagementTool.Data.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<h2 style="color:#b40505">Users</h2>
<hr />
@if (ViewBag.displayMenu == "Yes")
{
    <h1>Welcome Admin. Now you can create user Role.</h1>
        <li>@Html.ActionLink("Manage Role", "Index", "Role")</li>

}
else
{
    <h2>   <strong>@ViewBag.Name</strong></h2>
}

<table class="table" style="border:solid;border-color:grey">
    <tr bgcolor="#204d74" style="color:white">
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @*
            @Html.DisplayNameFor(model => model.Roles)    
            *@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.HiddenFor(modelItem => item.Roles)
    </td>
    <td>
        @*
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        *@
    </td>

</tr>
    }

</table>
<div class="row">
    <div class="col-md-2">
        <p>
            @Html.ActionLink("+Add New User", "Register", "Account")
        </p>
    </div>
</div>
