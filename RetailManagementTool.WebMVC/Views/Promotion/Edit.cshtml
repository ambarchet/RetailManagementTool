@model RetailManagementTool.Models.Promotion.PromotionEdit

@{
    ViewBag.Title = "Edit";
}

<h2 style="color:#b40505">Edit Promotion</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-9 form-horizontal" style="border:ridge;border-color:grey">
            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.PromotionId)

            <div class="form-group">
                @Html.LabelFor(model => model.PromotionDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PromotionDescription, new { htmlAttributes = new { @class = "form-control", Title = "Use exact wording you want to display for Promotion (ex. 50% Off, BOGO 50% Off, $5.99)" } })
                    @Html.ValidationMessageFor(model => model.PromotionDescription, "", new { @class = "text-danger" })
                    Use exact wording you want to display for Promotion (ex. 50% Off, BOGO 50% Off, $5.99)
                </div>
            </div>
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.PromoTypeId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.PromoTypeId, ViewBag.PromotionTypes as List<SelectListItem>, "Select From List")
                    @Html.ValidationMessageFor(model => model.PromoTypeId, "", new { @class = "text-danger" })
                    @*
                        @Html.EditorFor(model => model.PromoTypeId, new { htmlAttributes = new { @class = "form-control" } })
                    *@
                </div>
            </div>
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.PromotionValue, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PromotionValue, new { htmlAttributes = new { @class = "form-control", Title = "Ex. 40% = 40 (without decimal or %), $5.99 = 5.99 (without $) "  } })
                    @Html.ValidationMessageFor(model => model.PromotionValue, "", new { @class = "text-danger" })
                    Ex. 40% = 40 (without decimal or %), $5.99 = 5.99 (without $)
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}
<div class="row">
    <div>
        <br />
        @Html.ActionLink("To Full List of Promotions", "Index")
    </div>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
