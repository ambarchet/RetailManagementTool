@model IEnumerable<RetailManagementTool.Models.Product.ProductListItem>

@{
    ViewBag.Title = "Index";
}

<h2 style="color:#b40505">Products</h2>
<hr />

<div>
    @using (Html.BeginForm("Index", "Product"))
    {
        <input type="text" name="SKU" />
        <input type="submit" value="Search SKU" />
    }
</div>

    <br />
    <table class="table" style="border:solid;border-color:grey">
        <tr bgcolor="#204d74" style="color:white">
            <th>
                @*
                    @Html.DisplayNameFor(model => model.ProductId)

                *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Style)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SKU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZoneName)
            </th>
            <th>
                @*
                    @Html.DisplayNameFor(model => model.PromotionDescription)
                *@
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.HiddenFor(modelItem => item.ProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Style)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SKU)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZoneName)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => item.PromotionDescription)
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ProductId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ProductId })
                    </td>
                }
                else
                {
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.ProductId })
                    </td>
                }
            </tr>
        }

    </table>
    <div class="row">

        <div class="col-md-2">
            @if (User.IsInRole("Admin"))
            {
                <p>
                    @Html.ActionLink("+Add New Product", "Create")
                </p>
            }
        </div>
        <div class="col-md-2">
            @Html.ActionLink("Full List of Products", "Index")
        </div>

    </div>

